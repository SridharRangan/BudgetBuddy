<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <!-- Overview category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:text="Enter the details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Label field -->
            <EditText
                android:id="@+id/edit_expenditure_label"
                android:hint="Expenditure Label"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Amount field -->
            <EditText
                android:id="@+id/edit_expenditure_amount"
                android:hint="Expenditure Amount"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


        <!-- Tag -->
        <TextView
            android:text="Tag Spot?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Input field -->
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Weight field -->
            <EditText
                android:id="@+id/edit_expenditure_tag"
                android:hint="quantity"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    <Button
        android:id="@+id/savebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="saveExpenditure"/>

</LinearLayout>