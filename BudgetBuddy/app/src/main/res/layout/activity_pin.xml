<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_bg">

            <TextView
                android:id="@+id/pin_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter PIN"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageview_circle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@drawable/circle"/>
                <ImageView
                    android:id="@+id/imageview_circle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@drawable/circle"/>
                <ImageView
                    android:id="@+id/imageview_circle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@drawable/circle"/>
                <ImageView
                    android:id="@+id/imageview_circle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@drawable/circle"/>

            </LinearLayout>
        </LinearLayout>
        <GridLayout
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <Button android:text = "1"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button1"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "2"
                android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button2"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "3"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button3"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "4"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button4"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "5"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button5"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "6"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button6"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "7"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button7"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "8"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button8"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Button android:text = "9"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button9"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>
            <Space/>
            <Button android:text = "0"
                    android:textSize="@dimen/pin_button_text_size"
                    android:id="@+id/button0"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"/>

        </GridLayout>
    </LinearLayout>
</LinearLayout>